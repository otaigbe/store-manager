CREATE TABLE sales
(
    "salesId" integer NOT NULL,
    "productId" bigint,
    "productName" character varying(200),
    brand character varying(250),
    price double precision,
    category character varying(200),
    "quantitySold" integer,
    "quantityInStock" integer,
    amount integer,
    attendant character varying,
    "receiptNumber" bigint,
    "dateSold" date
)


CREATE TABLE products
(
    product_id integer NOT NULL DEFAULT,
    product_desc character varying(200),
    product_brand character varying(150),
    unit_price double precision NOT NULL,
    quantity_supplied character varying(250),
    supplier_name character varying(200),
    date_of_creation timestamp(6),
    category character varying(200),
    name_of_recipient character varying(200) ,
    CONSTRAINT products_pkey PRIMARY KEY (product_id)
)


CREATE TABLE attendants
(
    first_name character varying(200),
    last_name character varying(200),
    date_of_birth date NOT NULL,
    password character varying(500),
    address character varying(500),
    phone_number bigint NOT NULL,
    country character varying(100),
    qualification character varying(500) ,
    additional_skills character varying(1000),
    guarantor_name character varying(500),
    admin boolean NOT NULL
)



CREATE TABLE admin
(
    first_name character varying(200) COLLATE pg_catalog."default" NOT NULL,
    last_name character varying(200) COLLATE pg_catalog."default" NOT NULL,
    email character varying(200) COLLATE pg_catalog."default" NOT NULL,
    password character varying(200) COLLATE pg_catalog."default" NOT NULL,
    attendant boolean NOT NULL
)
